<UserControl x:Class="UodClientWpf.View.UserControlMesureSensity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UodClientWpf.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding Num}"/>
                <DataGridTextColumn Header="Полярность" Binding="{Binding Polary}"/>
                <DataGridTextColumn Header="Разность X" Binding="{Binding Rasn[0]}"/>
                <DataGridTextColumn Header="Разность Y" Binding="{Binding Rasn[1]}"/>
                <DataGridTextColumn Header="Разность Z" Binding="{Binding Rasn[2]}"/>
                <DataGridTextColumn Header="Сумма X"  Binding="{Binding Summ[0]}"/>
                <DataGridTextColumn Header="Сумма Y"  Binding="{Binding Summ[1]}"/>
                <DataGridTextColumn Header="Сумма Z"  Binding="{Binding Summ[2]}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
